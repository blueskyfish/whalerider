{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/lib/commons/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/backend/lib/commons",
        "tsConfig": "packages/backend/lib/commons/tsconfig.lib.json",
        "packageJson": "packages/backend/lib/commons/package.json",
        "main": "packages/backend/lib/commons/src/index.ts",
        "assets": ["packages/backend/lib/commons/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs backend-lib-commons {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/backend/lib/commons/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/backend/lib/commons"],
      "options": {
        "jestConfig": "packages/backend/lib/commons/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["backend:lib"]
}
